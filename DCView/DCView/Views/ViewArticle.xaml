<phone:PhoneApplicationPage 
    x:Class="MyApps.DCView.ViewArticle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:my="clr-namespace:MyApps.DCView"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False"
    toolkit:TiltEffect.IsTiltEnabled="True">
    
    <phone:PhoneApplicationPage.Resources>
        <my:BoolToColorConverter x:Key="BoolToColorConverter" />        
    </phone:PhoneApplicationPage.Resources>
    
    <!--LayoutRoot에는 다른 모든 페이지 내용이 배치되는 루트 표가 포함됩니다.-->
    <Grid x:Name="LayoutRoot" Language="ko-kr">
        
        <controls:Pivot Title="내 응용 프로그램" Name="PivotMain" SelectionChanged="PivotMain_SelectionChanged">   
            
            <!--Panorama 항목 1-->
            <controls:PivotItem x:Name="PivotList" Header="목록" Margin="6,14,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                                       
                    <ListBox x:Name="ArticleList" Grid.Row="0" 
                             SelectionChanged="ArticleList_SelectionChanged"
                             ManipulationCompleted="ArticleList_ManipulationCompleted">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                            
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="12, 12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Grid.Column="0" Width="5" Height="Auto" Fill="{Binding Path=HasImage, Converter={StaticResource BoolToColorConverter}}" />  
                                    <StackPanel Grid.Column="1" Margin="0, 0, 0, 3">
                                        <TextBlock Text="{Binding Title}" 
                                                   Style="{StaticResource DCViewTextMediumStyle}"
                                                   TextWrapping="Wrap" />                                  
                                    
                                        <TextBlock Text="{Binding Status}" Style="{StaticResource DCViewTextSmallStyle}" />
                                        
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>                        
                    </ListBox>
                    
                    <toolkit:PerformanceProgressBar Grid.Row="1" Background="Transparent" IsIndeterminate="{Binding IsLoadingArticleList}"/>

                </Grid>

            </controls:PivotItem>

            <!--Pivot 항목 2-->
            <controls:PivotItem x:Name="PivotArticle" Header="내용" Margin="6,14,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--ListBox toolkit:TiltEffect.SuppressTilt="True" Grid.Row="0" x:Name="ArticleText" Margin="12, 12" ManipulationCompleted="ArticleText_ManipulationCompleted">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Loaded="VirtualizingStackPanel_Loaded"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" >
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>

                        </ListBox.ItemContainerStyle>
                    </ListBox-->
                    
                    <ScrollViewer Grid.Row="0" x:Name="ArticleTextScroll">
                        <StackPanel x:Name="ArticleText" Margin="12,0,12,0">
                        </StackPanel>
                    </ScrollViewer>
                    
                    <toolkit:PerformanceProgressBar Grid.Row="1" Background="Transparent" IsIndeterminate="{Binding IsLoadingArticleText}" />

                </Grid>
            </controls:PivotItem>

        </controls:Pivot>
    </Grid>

</phone:PhoneApplicationPage>